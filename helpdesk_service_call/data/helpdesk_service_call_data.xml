<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="helpdesk_ticket_category_service_call" model="helpdesk.ticket.category">
            <field name="company_id" ref="base.main_company"/>
            <field name="name">Service call</field>
            <field eval="True" name="active"/>
        </record>

        <record id="assignment_user_service_call_email_template" model="mail.template">
            <field name="name">Ticket confirmation</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="email_from">${object.company_id.partner_id.email}</field>
            <field name="email_to">${object.partner_email}</field>
            <field name="subject">${object.company_id.name} Ticket confirmation (Ref ${object.number or 'n/a' })
            </field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="xml">
                <p>Hello ${object.partner_name},</p>
                <p>The ticket ${object.number} has been created from supplier applicant. Thanks!
                    <br/>
                    Received informations by ${object.channel}
                    <br/>
                    Nom: ${object.partner_name}
                    <br/>
                    Email: ${object.partner_email}
                    <br/>
                    Phone: ${object.partner_phone}
                    <br/>
                    Address: ${object.partner_address}
                    <br/>
                    ${"Address invoice: " + object.partner_address_invoice.name if object.partner_address_invoice else ""}
                    <br/>
                    ${"Description: " + object.description.name if object.description else ""}
                    <br/>
                    ${"Actual stage: " + object.stage.name if object.stage else ""}
                    <br/>
                    ${"Problem Location: " + object.problem_location.name if object.problem_location else ""}
                    <br/>
                    ${"Affected system: " + object.affected_system_id.name if object.affected_system_id else ""}
                </p>
            </field>
        </record>

        <record id="helpdesk_ticket_team_service" model="helpdesk.ticket.team">
            <field eval="&quot;Service&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field eval="&quot;2&quot;" name="color"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="helpdesk_ticket_affected_system_security_footage" model="helpdesk.ticket.affected_system">
            <field eval="&quot;Security footage&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="helpdesk_ticket_affected_system_access_control" model="helpdesk.ticket.affected_system">
            <field eval="&quot;Access control&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="helpdesk_ticket_affected_system_interphone" model="helpdesk.ticket.affected_system">
            <field eval="&quot;Interphone&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="helpdesk_ticket_affected_system_server_work_station" model="helpdesk.ticket.affected_system">
            <field eval="&quot;Server/Work station&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="helpdesk_ticket_affected_system_other" model="helpdesk.ticket.affected_system">
            <field eval="&quot;Other&quot;" name="name"/>
            <field eval="&quot;1&quot;" name="active"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

    </data>

</odoo>
